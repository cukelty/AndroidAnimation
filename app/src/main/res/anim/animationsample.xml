<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="true"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
    android:duration="3000"
    android:fillAfter="false"
    >
    <!-- shareinterpolator   表示共享差值器
    interpolator       表示差值器  影响动画速动
    duration    动画持续时间               常用属性
    fillAfter   结束后view是否会回原位置      常用属性-->
    <alpha android:fromAlpha="0.1"
        android:toAlpha="1"
       />
    <!-- fromAlpha    动画开始透明度  float
        toAlpha       动画结束透明值  float

        -->

    <scale
        android:fromXScale="500"
        android:fromYScale="0.0"
        android:toXScale="0.0"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"

        />
    <!--fromXScale      float
        toXScale       float
        fromYScale    float
        toYScale      float
        pivotX       float
        pivotY       float
    -->

    <rotate android:pivotY="80%"
        android:pivotX="80%"
        android:fromDegrees="0"
        android:toDegrees="+180"
        />

    <!-- pivotY
         pivotX
         fromDegrees
         toDegrees
    -->

    <translate android:fromXDelta="30"
        android:fromYDelta="30"
        android:toXDelta="-80"
        android:toYDelta="300"
        />

    <!--fromXDelta
        fromYDelta
        toXDelta
        toYDelta
    -->
</set>